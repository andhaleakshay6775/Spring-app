<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="address" class="com.king.beans.Address">
		<property name="city" value="Aligarh"></property>
		<property name="state" value="Uttar Pradesh"></property>
		<property name="country" value="India"></property>

	</bean>

	<bean id="person" class="com.king.beans.Person">
		<property name="personId" value="7"></property>
		<property name="name" value="king"></property>
		<property name="address" ref="address"></property>
	</bean>


</beans>
